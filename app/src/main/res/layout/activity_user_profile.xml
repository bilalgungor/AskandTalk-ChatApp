<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/user_profile_bar"
                layout="@layout/app_bar_layout"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_picture"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:layout_below="@id/user_profile_bar"
                android:src="@drawable/profile"/>

            <TextView
                android:id="@+id/user_profile_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Name"
                android:layout_below="@+id/user_profile_picture"
                android:layout_marginTop="7dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/user_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                android:layout_below="@+id/user_profile_fullname"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/user_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HakkÄ±nda"
                android:layout_below="@+id/user_username"
                android:layout_marginTop="20sp"
                android:includeFontPadding="true"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textAllCaps="false"
                android:textSize="20sp"/>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>